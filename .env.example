# Production CMS Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
RUST_LOG=info
ENVIRONMENT=production

# Database Configuration (PostgreSQL)
# NOTE: Set your PostgreSQL connection here. For local development you can copy this file
# to `.env` and update the DATABASE_URL value. The application will load `.env` and
# prefer DATABASE_URL found in environment.
DATABASE_URL=postgresql://cms_user:secure_password_change_me@localhost:5432/production_cms
DATABASE_MAX_CONNECTIONS=10

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=cms

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-at-least-32-characters-long
TOKEN_EXPIRY_HOURS=24
SESSION_TIMEOUT_MINUTES=120

# Biscuit keys (optional)
# You can provide base64-encoded keys here to persist biscuit keypair across restarts
# Generate keys with the dev helper binary: `cargo run --bin gen_biscuit_keys`
BISCUIT_PRIVATE_KEY_B64=
BISCUIT_PUBLIC_KEY_B64=

# WebAuthn Configuration
WEBAUTHN_ORIGIN=http://localhost:3000
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Production CMS

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Development Settings (disable in production)
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cms-backups
BACKUP_S3_REGION=us-east-1

# Optional: External Services
# S3 Configuration (for file storage)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# CloudFlare Configuration (for CDN)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Analytics Configuration
GOOGLE_ANALYTICS_ID=
