# Minimal CMS Configuration (no database, cache, search, or auth)
# Server Configuration
CMS_SERVER_HOST=127.0.0.1
CMS_SERVER_PORT=3000
CMS_SERVER_MAX_REQUEST_SIZE=10485760
CMS_SERVER_REQUEST_TIMEOUT=30
CMS_SERVER_WORKER_THREADS=4

# Media Configuration
CMS_MEDIA_UPLOAD_DIR=./uploads
CMS_MEDIA_MAX_FILE_SIZE=10485760
CMS_MEDIA_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf,txt,md
CMS_MEDIA_THUMBNAIL_SIZES=150x150,300x300

# Notification Configuration
CMS_NOTIFICATIONS_EMAIL_SMTP_HOST=localhost
CMS_NOTIFICATIONS_EMAIL_SMTP_PORT=587
CMS_NOTIFICATIONS_EMAIL_SMTP_USERNAME=user
CMS_NOTIFICATIONS_EMAIL_SMTP_PASSWORD=pass
CMS_NOTIFICATIONS_EMAIL_FROM_ADDRESS=noreply@example.com
CMS_NOTIFICATIONS_EMAIL_FROM_NAME=CMS

CMS_NOTIFICATIONS_WEBHOOKS_ENABLED=false
CMS_NOTIFICATIONS_WEBHOOKS_TIMEOUT=30
CMS_NOTIFICATIONS_WEBHOOKS_RETRY_ATTEMPTS=3

# Logging
RUST_LOG=info
